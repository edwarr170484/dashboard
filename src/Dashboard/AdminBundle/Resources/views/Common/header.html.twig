<!-- begin #header -->
		<div id="header" class="header navbar navbar-default navbar-fixed-top">
			<!-- begin container-fluid -->
			<div class="container-fluid">
				<!-- begin mobile sidebar expand / collapse button -->
				<div class="navbar-header">
					<a href="{{ path('admin_main') }}" class="navbar-brand"> Sunweb.CMS</a>
					<button type="button" class="navbar-toggle" data-click="sidebar-toggled">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
				</div>
				<!-- end mobile sidebar expand / collapse button -->
				
				<!-- begin header navigation right -->
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a href="javascript:;" data-toggle="dropdown" class="dropdown-toggle f-s-14">
							<i class="fa fa-bell-o"></i>
                                                        {% if newConfirmations + newComplaints + newMessages %}
                                                            <span class="label">{{ newConfirmations + newComplaints + newMessages }}</span>
                                                        {% endif %}
						</a>
						<ul class="dropdown-menu media-list pull-right animated fadeInDown">
                                                    <li class="dropdown-header">Уведомления</li>
                                                    {% if settings.isModerate %}
                                                        <li class="media">
                                                            <a href="{{ path('admin_product_confirm') }}">
                                                                <div class="media-left"><i class="fa fa-bug media-object bg-red"></i></div>
                                                                <div class="media-body">
                                                                    <h6 class="media-heading">Объявлений на модерацию</h6>
                                                                    {% if newConfirmations %}
                                                                        <div class="text-muted f-s-11">{{ newConfirmations }} новых объявлений</div>
                                                                    {% else %}
                                                                        <div class="text-muted f-s-11">Новых объявлений нет</div>
                                                                    {% endif %}
                                                                </div>
                                                            </a>
                                                        </li>
                                                    {% endif %}
                                                    <li class="media">
                                                        <a href="{{ path('admin_complaint') }}">
                                                            <div class="media-left"><i class="fa fa-plus media-object bg-green"></i></div>
                                                            <div class="media-body">
                                                                <h6 class="media-heading"> Жалоб на пользователей</h6>
                                                                {% if newComplaints %}
                                                                    <div class="text-muted f-s-11">{{ newComplaints }} новых жалоб</div>
                                                                {% else %}
                                                                    <div class="text-muted f-s-11">Новых жалоб нет</div>
                                                                {% endif %}
                                                            </div>
                                                        </a>
                                                    </li>
                                                    <li class="media">
                                                        <a href="{{ path('admin_messages') }}">
                                                            <div class="media-left"><i class="fa fa-envelope media-object bg-blue"></i></div>
                                                            <div class="media-body">
                                                                <h6 class="media-heading"> Обращения из формы</h6>
                                                                {% if newMessages %}
                                                                    <div class="text-muted f-s-11">{{ newMessages }} новых обращений</div>
                                                                {% else %}
                                                                    <div class="text-muted f-s-11">Новых обращений нет</div>
                                                                {% endif %}
                                                            </div>
                                                        </a>
                                                    </li>
                                                </ul>
					</li>
					<li class="dropdown navbar-user">
						<a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                                                    {% if user.userinfo.avatar %}
                                                        <img src="{{ asset('bundles/images/users/avatars/') }}{{ user.userinfo.avatar }}" alt="" title="" />
                                                    {% else %}
                                                        <img src="{{ asset('bundles/Default/img/avatar.png') }}" alt="" title="" />
                                                    {% endif %}
							<span class="hidden-xs">{{ user.userinfo.firstname }} {{ user.userinfo.lastname }}</span> <b class="caret"></b>
						</a>
						<ul class="dropdown-menu animated fadeInLeft">
							<li class="arrow"></li>
							<li><a href="{{ path('admin_user_edit', {'userId' : user.id}) }}">Редактировать</a></li>
							<li class="divider"></li>
							<li><a href="{{ path('admin_logout')}}">Выйти</a></li>
						</ul>
					</li>
				</ul>
				<!-- end header navigation right -->
			</div>
			<!-- end container-fluid -->
		</div>
		<!-- end #header -->