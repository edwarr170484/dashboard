{% extends 'DashboardAdminBundle:Common:adminbase.html.twig' %}

{% block title %}{% trans %} Панель управления - Платежная система Liqpay{% endtrans %}{% endblock %}

{% block body %}
<div id="content" class="content">
    <ol class="breadcrumb pull-right">
        <li><a href="{{ path('admin_main') }}">Главная</a></li>
        <li class="active">Liqpay</li>
    </ol>
    <h1 class="page-header">Платежная система Liqpay<small>Параметры платежной системы Liqpay</small></h1>
    <div class="row">
        <div class="col-md-12 ui-sortable">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="notice-message">
                        {{ flashMessage | raw }}
                    </div>                             
            {% endfor %}
            <div data-sortable-id="table-basic-7" class="panel panel-inverse">
                <div class="panel-heading ui-sortable-handle">
                    <h4 class="panel-title">Параметры Liqpay</h4>
                </div>
                <div class="panel-body">
                    {{ form_start(liqpayForm, {'attr' : {'class' : 'form-horizontal'}})}}
                    <div class="form-group">
                        <label class="col-md-3 ">{{ form_label(liqpayForm.publicKey)}}</label>
                        <div class="col-md-9">
                            {{ form_widget(liqpayForm.publicKey)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 ">{{ form_label(liqpayForm.privateKey)}}</label>
                        <div class="col-md-9">
                            {{ form_widget(liqpayForm.privateKey)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 ">{{ form_label(liqpayForm.currency)}}</label>
                        <div class="col-md-9">
                            {{ form_widget(liqpayForm.currency)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 ">{{ form_label(liqpayForm.sandbox)}}</label>
                        <div class="col-md-9">
                            {{ form_widget(liqpayForm.sandbox)}}
                        </div>
                    </div>
                    <div class="form-group">
                            <label class="col-md-3 ">{{ form_label(liqpayForm.save)}}</label>
                            <div class="col-md-9">
                                {{ form_widget(liqpayForm.save,{'type' : 'submit'})}}
                            </div>
                    </div> 
                    {{ form_end(liqpayForm)}}
                </div>           
            </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



