                                                <div class="userrating">{% trans %}Vērtējums{% endtrans %}: {{ user.userinfo.rating }} %</div>
                                                <div class="userrecord">
                                                    {{ user.receivedOrders | length }} <i class="fa fa-shopping-cart" aria-hidden="true"></i> /
