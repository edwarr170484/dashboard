{% extends 'DashboardCommonBundle:Common:base.html.twig' %}

{% block title %}{% trans %}Lietotāja profils{% endtrans %}{% endblock %}

{% if app.user %}
    {% form_theme messageForm _self %}
{% endif %}

{% block body %}
